<html>
	<head>
    <title><%= @tweet[:title].upcase %> - <%= @user.name %></title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="/assets_ad/js/ie/html5shiv.js"></script><![endif]-->
		<link rel="stylesheet" href="/assets_ad/css/main.css" />
		<!--[if lte IE 9]><link rel="stylesheet" href="/assets_ad/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="/assets_ad/css/ie8.css" /><![endif]-->
    <style>
      #main {
        background-image: url(<%= @user.banner_url %>);
          background-repeat: repeat-x;
        
        }
    </style>
	</head>
	<body>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
            <p><a href="/">Inicio</a></p>
          </header>

				<!-- Main -->
					<div id="main">

						<!-- Content -->
            <section id="content" class="main">
              <div class="author-block">

              <dl class="alt">
                <dt>
                  <img src="<%= @user.pic %>" alt="<%= @user.name %>" />
                </dt>
                <dd>
                <a 
                 href="<%= @user.url%>" 
                 onclick="window.open(this.href); return false;">
                 <%= @user.name %>
                  <p><%= @user.nickname %></p>
                  </a></dd>
              </dl>
              </div>
                <h1><%= @tweet[:title] %></h1>
                <p><%= @user.location %></p> 
                <p><%= @tweet.phone %> (<%= @tweet.price %>)</p>
                <div class="main-media">
                <% if @tweet.video %>
                    <video controls>
                      <source src="<%= @tweet.video %>" type="<%= get_mime_type @tweet.video %>">
                      Your browser does not support the video tag.
                   </video>
                  <% elsif !@tweet.image.empty? %>
                    <img src="<%= @tweet.image %>" alt="<%= @tweet.title %>" />
                  <% else %>
                  <% end %>
                </div>
                <ul>
                <% @tweet.message.split(",").each do |f| %>
                  <li><%= clean_string f %></li>
                <% end %>
                </ul>
							</section>

					</div>

				<!-- Footer -->
					<footer id="footer">
						<section>
							<h2>Descripción:</h2>
              <p><%= @user.description %></p>
							<ul class="actions">
								<li><a href="/" class="button">Inicio</a></li>
							</ul>
						</section>
						<section>
							<h2>Usuario:</h2>
							<dl class="alt">
								<dt>Verficado</dt>
                <dd>(<%= @user[:author_verified]? "Sí":"No" %>)</dd>
								<dt>Ciudad</dt>
                <dd><%= @user.location %></dd>
								<dt>Antiguedad:</dt>
                <dd><%= @user.twitter_created_at %></dd>
							</dl>
							<ul class="icons">
								<li><a href="#" class="icon fa-twitter alt"><span class="label">Twitter</span></a></li>
								<li><a href="#" class="icon fa-facebook alt"><span class="label">Facebook</span></a></li>
								<li><a href="#" class="icon fa-instagram alt"><span class="label">Instagram</span></a></li>
								<li><a href="#" class="icon fa-github alt"><span class="label">GitHub</span></a></li>
								<li><a href="#" class="icon fa-dribbble alt"><span class="label">Dribbble</span></a></li>
							</ul>
						</section>
						<p class="copyright">&copy; Creado por: <a href="https://www.eosweb.info/">EOS WEB Development</a>.</p>
					</footer>

			</div>

		<!-- Scripts -->
			<script src="/assets_ad/js/jquery.min.js"></script>
			<script src="/assets_ad/js/jquery.scrollex.min.js"></script>
			<script src="/assets_ad/js/jquery.scrolly.min.js"></script>
			<script src="/assets_ad/js/skel.min.js"></script>
			<script src="/assets_ad/js/util.js"></script>
			<!--[if lte IE 8]><script src="/assets_ad/js/ie/respond.min.js"></script><![endif]-->
			<script src="/assets_ad/js/main.js"></script>

	</body>
</html>
